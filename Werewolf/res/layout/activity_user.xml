<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ruins"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserActivity" >

    <TextView
        android:id="@+id/lblError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8000"
        android:text="Error"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fff" />

    <TextView
        android:id="@id/lblUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#eee" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lblExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience Points"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#eee" />

    <TextView
        android:id="@+id/lblBadgePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badge Points:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#eee" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3" >

        <ImageButton
            android:id="@+id/badge1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/uncoin" />

        <ImageButton
            android:id="@+id/badge2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/uncoin" />

        <ImageButton
            android:id="@+id/badge3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/uncoin_selected" />

        <ImageButton
            android:id="@+id/badge4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/uncoin" />

        <ImageButton
            android:id="@+id/badge5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/coin" />

        <ImageButton
            android:id="@+id/badge6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/uncoin" />

        <ImageButton
            android:id="@+id/badge7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/uncoin" />

        <ImageButton
            android:id="@+id/badge8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/uncoin" />

        <ImageButton
            android:id="@+id/badge9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/uncoin" />
    </GridLayout>

    <TextView
        android:id="@+id/lblBadgeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badge Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#eee" />

    <TextView
        android:id="@+id/lblBadgeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badge description "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#eee" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnGames"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"            
            android:text="Game Lobby" />
    </RelativeLayout>

</LinearLayout>